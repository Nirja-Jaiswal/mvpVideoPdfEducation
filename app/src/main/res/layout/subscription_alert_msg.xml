<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:background="@drawable/blackborder_withradious"
    android:layout_height="@dimen/_250sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:background="@color/light_green"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_walets"/>

        <TextView
            android:textSize="@dimen/_24sdp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Please Upgrade !"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="Please Upgrade Your Subscription to view Materials"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>



        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="match_parent">


            <Button
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/bluebackground"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Cancel"
                android:id="@+id/btn_cancel"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/btn_upgrade_now"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@drawable/ripple_btn"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="Upgrade Now"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>


        </LinearLayout>







    </LinearLayout>





</LinearLayout>