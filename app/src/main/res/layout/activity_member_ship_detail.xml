                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/video_msg"/>

            </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/gray"
                    android:layout_height="@dimen/_1sdp">

