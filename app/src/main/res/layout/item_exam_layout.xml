<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@color/colorPrimary"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/examdetails"
                        android:background="@color/white"
                        android:padding="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                            android:text="WHAT IS THE CONCEPT OF THE LESSON SHIVATHO SANDU PADHYAN ??"/>

                        <LinearLayout
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/black"
                                android:text="No. of Question"/>

                            <TextView
                                android:id="@+id/no_of_que"
                                android:textAlignment="textEnd"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/black"
                                android:text="20"
                                android:gravity="end" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/black"
                                android:text="Duration"/>

                            <TextView
                                android:id="@+id/duration"
                                android:textAlignment="textEnd"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/black"
                                android:text="10 min"
                                android:gravity="end" />


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@color/gray"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_height="@dimen/_1sdp">

                        </LinearLayout>
                        <TextView
                            android:id="@+id/start_now"
                            android:paddingRight="@dimen/_30sdp"
                            android:paddingLeft="@dimen/_30sdp"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:background="@drawable/submitbackground"
                            android:text="Start Now"/>

                    </LinearLayout>

                </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>