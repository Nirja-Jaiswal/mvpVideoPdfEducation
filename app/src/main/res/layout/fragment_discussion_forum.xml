<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_margin="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_12black_bold"
            android:layout_width="wrap_content"
            android:text="@string/post_your_question"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/rectanglebackground"
                android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/class_spinner"
                android:background="@null"
                android:layout_weight=".2"
                android:padding="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/rectanglebackground"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/subject_spinner"
                    android:background="@null"
                    android:layout_weight=".2"
                    android:padding="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow" />
            </LinearLayout>

            <EditText
                android:windowSoftInputMode="stateAlwaysVisible"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:isScrollContainer="true"
                android:focusable="true"
                android:id="@+id/et_email"
                android:gravity="left|top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rectanglebackground"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Type your question here ...."
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_pdf_upload"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pdf_name"
                    android:layout_width="wrap_content"
                    android:text="@string/attachment"
                    android:textColor="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_attachment"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/Submit"
                    android:background="@drawable/round_button"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_width="@dimen/_150sdp"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>
    </LinearLayout>
