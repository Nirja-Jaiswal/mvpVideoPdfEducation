<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.PaymentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/white"
            android:padding="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:layout_margin="@dimen/_15sdp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please select your Payment Method for Payment"
                android:textColor="@color/light_gray"
                android:textStyle="bold"
                android:textSize="@dimen/_16sdp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/_20sdp"
        android:padding="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/redcorner"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Credit Balance"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/mTotalprice"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5000 Rs"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/online_payment_linear"

        android:weightSum="2"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/pricebackground"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_weight="1.5"
            android:src="@drawable/masters"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online Payment"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />

    </LinearLayout>

</LinearLayout>