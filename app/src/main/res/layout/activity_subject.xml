<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".view_section.ui.home.Activity.SubjectActivity">


    <RelativeLayout
        android:id="@+id/rl_header_comment"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />


        <TextView
            android:id="@+id/tv_header_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="@string/your_subject" />
    </RelativeLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recycleview_subject"
        android:layout_height="wrap_content"/>






    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_layout"
      android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:text="Live Exam"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="@dimen/_15sdp"
            android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_live_exams"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="#fff"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:src="@drawable/live"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_weight=".7"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Exam Hall"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>



</LinearLayout>